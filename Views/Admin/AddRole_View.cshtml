@await Component.InvokeAsync("Menu" , new {})

<h1>Добавить роль</h1>

@if(@ViewBag.Ex == 1)
{
    <h1>Данная роль уже существует</h1>
}

<form method="post" asp-controller="Admin" asp-action="AddRole"  class="form_line">

    
    <div class="card" style="width: 18rem;">
  
        <div class="card-body">
        
            
        <div class="input-group mb-2">
            <div class="input-group-prepend">
            <div class="input-group-text">Имя роли</div>
            </div>
            <input type="text" class="form-control" name="name" placeholder="Role Name" value="">
        </div>
        @foreach (var item in @ViewBag.Abilities)
        {
            <input type="checkbox" name="check" value="@item[0]"> @item[1] <br>
            
        }
        </div>
        <div class="form-group">
            <label for="description">Описание</label>
            <textarea class="form-control" name="description" rows="3"></textarea>
        </div>
    </div>


   
    
    <button type="submit"  class="btn btn-sm-2 btn-dark">Добавить</button>
</form>