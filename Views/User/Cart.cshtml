@await Component.InvokeAsync("Menu" , new {})
<h1>@ViewBag.Translate_words[18]</h1>





<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">@ViewBag.Translate_words[19]</th>
      <th scope="col">@ViewBag.Translate_words[22]</th>
      <th scope="col">@ViewBag.Translate_words[63]</th>
      <th scope="col">@ViewBag.Translate_words[35]</th>
      
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
@foreach( var a in @ViewBag.Cart.items) 
{
    <tr>
      
      
      <td><img src="~/Pictures/@a[2]" class="card-img-top " style="height:100px; width : 100px;" alt="..."></td>
      <th scope="row">@a[1]</th>
      <td>
        
        <div class="mb-2">
         @a[3]
        </div>
        
        </td>
      
       @if(@a[5] != "")
          {
            <td>
             <strike> @a[4] у.е. </strike>  @a[5] у.е. 
            </td>
          }
          else
          {
             <td>@a[4] у.е.  </td>
          }
      
      <td>
            <form  asp-controller="Product" asp-action="RemoveProduct"  class="form-inline form_search">        
                <input type="hidden" name ="_id_product_in_cart" value="@a[0]"  />              
                <button class="btn btn-sm-2 btn-dark" type="submit">Убрать</button>
            </form>
      </td>
      
    </tr>
   
}


<hr>
  <tr>
    <td></td>
    <td></td>
    <td> <h3>К оплате :</h3></td>
    <td><h3 class="">@ViewBag.Cart.this_price у.е.</h3></td>
    <td>
    
      <form  asp-controller="User" asp-action="Buy"  class="test" style="width: 60%;">        
              <input type="hidden" name ="_id_user" value="@ViewBag.Cart.id_user"  />  
              
              <button  name="buy" class="btn btn-sm-2 btn-dark  "  type="submit">@ViewBag.Translate_words[64]</button>     
      </form>
    
    </td>
  </tr>
</table>





